<% startTime = Time.at(@event.startTime.to_i)
   endTime = Time.at(@event.endTime.to_i)
   startTimeString = startTime.strftime("%b %d     %H:%M")	
   endTimeString = endTime.strftime("%b %d     %H:%M")	
%>
<h1>Hi <%= @user %></h1>
<p>
  You've been invited by <%= @event.user.email %> to the <%= @event.name %>.<br/><br/>
  
  <em>Event Details:</em><br/>
  Venue: <%= @event.location %><br/>
  Description: <%= @event.description %><br/>
  From: <%= startTimeString %><br/> 
  To: <%= endTimeString %><br/><br/>

  <em>
  <%= link_to "Accept", controller: 'events', action: 'respondToInvite', email: @user, eventId: @event.id, status: "accepted"%>
  <%= link_to "Decline", controller: 'events', action: 'respondToInvite', email: @user, eventId: @event.id, status: "declined"%>
  <%= link_to "May be", controller: 'events', action: 'respondToInvite', email: @user, eventId: @event.id, status: "undecided"%>
  </em>
</p>